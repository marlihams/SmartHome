<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.smarthome.android.UserActivity">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
   >

    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_marginRight="10dp"
                android:id="@+id/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/userProfile"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="210dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/check"
                android:id="@+id/submit" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="530dp"
        android:id="@+id/house_card"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="15dp"

        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:id="@+id/imageview_profile"
            android:src="@drawable/profil_account"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

<EditText
    android:id="@+id/forname"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:hint="forname"
    android:layout_below="@+id/imageview_profile"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp" />

<EditText
    android:id="@+id/username"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:hint="Username"
    android:layout_below="@+id/forname"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/space_item"
    android:layout_marginTop="16dp" />

<EditText
    android:id="@+id/confirmPassword"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:hint="Password"
    android:password="true"
    android:layout_marginBottom="@dimen/space_item"
    android:layout_below="@+id/username"
    android:layout_centerHorizontal="true"
    />

<EditText
android:id="@+id/password"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceMedium"
android:hint="confirm Password"
android:password="true"
android:layout_below="@+id/confirmPassword"
    android:layout_marginBottom="@dimen/space_item"
android:layout_centerHorizontal="true"
/>

<EditText
    android:id="@+id/email"
    android:inputType="textEmailAddress"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:hint="email"
    android:layout_marginBottom="@dimen/space_item"
    android:layout_below="@+id/password"
    android:layout_centerHorizontal="true"
    />

<EditText
    android:id="@+id/phone"
    android:inputType="textEmailAddress"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_item"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:hint="Phone"
    android:layout_below="@+id/email"
    android:layout_centerHorizontal="true"
    />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>